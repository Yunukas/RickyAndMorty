            <ListBox x:Name="species_listBox" HorizontalAlignment="Left" Height="98" Margin="0,10,0,0" VerticalAlignment="Top" Width="195" MouseLeftButtonUp="Species_listBox_MouseLeftButtonUp"/>
            <ListBox x:Name="speciesChars_listBox" HorizontalAlignment="Left" Height="209" Margin="254,10,0,0" VerticalAlignment="Top" Width="190" MouseLeftButtonUp="SpeciesChars_listBox_MouseLeftButtonUp"/>
        </Grid>
        <Grid x:Name="grid_species_image" HorizontalAlignment="Left" Height="207" Margin="113,59,0,0" VerticalAlignment="Top" Width="259" Visibility="Hidden"/>

    </Grid>
</Page>
